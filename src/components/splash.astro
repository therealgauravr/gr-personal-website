---
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import astronautImage from "~/assets/astronaut.png";
import avatar from "~/assets/avatar.svg";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<script>
  import TypeIt from "typeit";

  document.addEventListener("DOMContentLoaded", function () {
    new TypeIt("#typeit-element", {
      loop: true,
      lifeLike: true,
      loopDelay: 10,
      breakLines: true,
      cursor: true,
      cursorSpeed: 700,
    })
      .type("Generalist problem solver.", { delay: 10 })
      .delete(null, { instant: false })
      .pause(1000)
      .type(" Always learning.", { delay: 100 })
      .pause()
      .go();
  });
</script>

<section class="relative h-full bg-black">
  <Starfield />
  <GitHubCorner />
  <!-- <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div> -->
  <div
    class="relative flex h-full flex-col items-center justify-center sm:flex-row sm:justify-between sm:space-x-4"
  >
    <div class="flex w-2/3 flex-col items-center space-y-2 text-center">
      <Icon
        name="gr_wordmark_minimalist_black"
        class="h-24 text-white md:h-32"
      />
      <div class="flex flex-col font-extrabold text-4xl">
        <div class="text-center tracking-tighter text-white">
          Hi there, I'm <span class="gradient-text pl-2">Gaurav</span>
          &#128406;&#127998;
        </div>
        <span class="text-white">Your friendly neighborhood</span>
        <span class="gradient-text text-center">Full-Stack Engineer</span>
      </div>
    </div>
    <div id="astronaut" class="hidden h-auto w-1/3 sm:inline">
      <Picture
        class="h-3/4 w-3/4 object-cover"
        src={avatar}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="An animated gr"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #astronaut {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
