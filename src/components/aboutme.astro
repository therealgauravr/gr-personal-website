---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { CompatibilityItem, FeatureItem } from "~/types";
import CompatibilityList from "./compatibility-list.astro";

const features: Array<FeatureItem> = [
  {
    title: "Bring Your Own Framework",
    description:
      "Build your site using React, Svelte, Vue, Preact, web components, or just plain ol' HTML + JavaScript.",
    icon: "mdi:ab-testing",
  },
  {
    title: "100% Static HTML, No JS",
    description:
      "Astro renders your entire page to static HTML, removing all JavaScript from your final build by default.",
    icon: "mdi:feather",
  },
  {
    title: "On-Demand Components",
    description:
      "Need some JS? Astro can automatically hydrate interactive components when they become visible on the page. If the user never sees it, they never load it.",
    icon: "mdi:directions-fork",
  },
  {
    title: "Broad Integration",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any of your favorite npm packages.",
    icon: "mdi:graph",
  },
  {
    title: "SEO Enabled",
    description:
      "Automatic sitemaps, RSS feeds, pagination and collections take the pain out of SEO and syndication.",
    icon: "mdi:search-web",
  },
  {
    title: "Community",
    description:
      "Astro is an open source project powered by hundreds of contributors making thousands of individual contributions.",
    icon: "mdi:account-group",
  },
];

const currently_learning: CompatibilityItem[] = [
  { icon: "mdi:microsoft-azure", title: "Azure", url: "#" },
];

---

<ContentSection
  title=""
  id="features"
>
  <CompatibilityList
    items={currently_learning}
    title="Currently Learning"
    url=""
  />
  <Fragment slot="lead">
    <span class="gradient-text text-2xl sm:text-4xl sm:h-40 text-center max-w-5xl w-11/13 sm:w-full" id="typeit-element"></span>

    <div
      class="flex w-full flex-col items-center justify-center text-center font-gilroy font-light text-xl"
    >
      <span>
        I am an experienced full-stack engineer, with experience leading a startup through two pivots over the past two years.
      </span>
      <span>
        In my spare time, I pursue a bunch of different passions - these include
        reading, writing poetry, and making music.
      </span>
      <span class="text-sm mt-2"> I'm also (unapologetically) a big history nerd.</span>
    </div>
  </Fragment>
  <!-- <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul> -->
</ContentSection>
