---
import { Picture } from '@astrojs/image/components';
import StackedWaves from '~/assets/neutron_login_screen.png';
import type { ShowcaseSite } from "~/types";

export interface Props {
  site: ShowcaseSite;
  index: number;
}

const { site, index } = Astro.props;

const widths = [450, 800];
const sizes = "(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw";
---

<div
  class={`flex w-full h-full ${
    index % 2 == 0 ? "flex-row" : "flex-row-reverse"
  } justify-between border-2 border-black`}
>
  <Picture
    class="w-full h-full"
    src={StackedWaves}
    widths={[1200]}
    alt={`A screenshot of ${site.url}`}
  />
  <div
    class={`border-2 border-black w-1/3 font-sans font-medium ${
      index % 2 == 0 ? "text-right" : "text-left"
    }`}
  >
    hi
  </div>
</div>
