---
import { Picture } from "@astrojs/image/components";
import bgLight from "~/assets/layered-peaks-haikei-ghostwhite.svg";

const widths = [450, 800, 1200];
const sizes = "100vw";
---

<Picture
  id="hero-image"
  class="object-fit h-full w-full"
  src={bgLight}
  widths={widths}
  sizes={sizes}
  alt="The ridged surface of the moon"
/>
